head
	link(href='vendor/bootstrap.min.css', rel='stylesheet')
	link(href='styles/main.css', rel='stylesheet')
body
	// Header.
	.navbar.navbar-default.navbar-fixed-top(role='navigation')
		.container
			.navbar-header
				// Menu icon.
				button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar

				// Brand containing logo and name.
				a.navbar-brand(href="#")
					.logo
					.name Don't Try This on Earth
			.collapse.navbar-collapse#navbar
				// Navigation links.
				ul.nav.navbar-nav.navbar-right
					li.account: a.viewSuggestions(href='#') View My Suggestions
					li.account: a.signOut(href='#') Sign Out
					// Sign in drop down.
					li.dropdown
						a.dropdown-toggle(data-toggle='dropdown')
							| Sign In
							b.caret
						ul.dropdown-menu
							li
								form#signIn.navbar-form.navbar-left(role='search')
									.form-group
										| Email
										input#email.form-control(type='email', placeholder='Email')
										| Password
										input#password.form-control(type='password', placeholder='Password')
									button.btn.btn-default(type='submit') Submit
					// Submit
					li.dropdown
						a.dropdown-toggle(data-toggle='dropdown')
							| Sign Up
							b.caret
						ul.dropdown-menu
							li
								form#signUp.navbar-form.navbar-left(role='search')
									.form-group
										| Email
										input#email.form-control(type='email', placeholder='Email')
										| Username
										input#username.form-control(type='text', placeholder='Username')
										| Password
										input#password.form-control(type='password', placeholder='Password')
									button.btn.btn-default(type='submit') Submit

	// Content (suggestions and comments).
	.container.wrapper.suggestions
		// Section containing suggestions.
		section#suggestions.allUsers
			// Form for posting a new suggestion.
			form#postSuggestion
				input#text(type='paragraph', placeholder='Please write your suggestion here...')
				.clickable.cancel(title="Don't create the suggestion")
					.icon
					| Cancel
				.clickable.submit(title='Create the suggestion')
					.icon
					| Post suggestion

			.user
				= 'All suggestions for '
				span.name user222567

			#suggestionsContainer
			.empty There are no suggestions.
			h2.clickable.back(title="Go back to viewing all user's suggestions")
				.text Return to suggestions
				.icon= '<'

		// Section containing comments.
		section#comments
			// Form for posting a new comment.
			form#postComment
				input#text(type='paragraph', placeholder='Please write your comment here...')
				.clickable.cancel(title="Don't create the comment")
					.icon
					| Cancel
				.clickable.submit(title='Create the comment')
					.icon
					| Post comment

			#commentsContainer
			.empty Be the first to comment!
			.noSuggestion No suggestion has been selected.
			h2.clickable.back(title='Return to viewing suggestions')
				.text Return to suggestions
				.icon= '<'
	script(src='vendor/jquery-1.11.0.min.js')
	script(src='vendor/bootstrap.min.js')
	script(src='scripts/main.js')
